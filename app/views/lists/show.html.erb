<div class="container">
    <h1 class="mt-4"><% @list.name%></h1>
    <%= link_to 'Add a movie', new_list_bookmark_path(@list), class: 'btn btn-outline-primary btn-md mb-4'%>
    <div class="row d-flex justify-content-around">
        <% @bookmarks.each do |bookmark|%>
          <p><%= bookmark.comment %></p>
        <% end %>
    </div>
</div>