
<div class="container py-5">
  <div class="d-flex justify-content-between">
    <h1>My Lists</h1>
    <%= link_to 'Create a movie List', new_list_path, class: 'btn btn-outline-primary btn-md mb-4'%>
  </div>

    <div class="row d-flex justify-content-around mb-2 align-items-center">
        <% @lists.each do |list|%>
          <div class="col-12 col-sm-6 col-md-4">
            <%= link_to list_path(list), class: 'text-decoration-none' do %>
              <div class="card-category mb-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
                  <%= list.name %>
              </div>
            <% end %>
          </div>
        <% end %>
    </div>
</div>
